{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": true,
    "paths": {
      "~/config/*": ["src/config/*"],
      "~/dto/*": ["src/models/dto/*"],
      "~/repo/*": ["src/mcs/repo/*"],
      "~/entity/*": ["src/models/entity/*"],
      "~/utils/*": ["src/utils/*"],
      "~/filters/*": ["src/filters/*"],
      "~/mcs/*": ["src/mcs/*"],
      "~/constants/*": ["src/constants/*"],
      "~/types/*": ["src/types/*"],
      "~/src/*": ["src/*"]
    }
  }
}
